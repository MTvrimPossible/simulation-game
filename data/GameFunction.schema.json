{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GameFunction",
  "description": "Defines a reusable, event-driven block of game logic.",
  "type": "object",
  "required": ["id", "triggers"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this function."
    },
    "triggers": {
      "type": "array",
      "description": "List of event hooks that auto-run this function.",
      "items": {
        "type": "string",
        "examples": ["OnPlayerEnterLocation", "OnTime:Midnight", "OnDialogue:Gossip"]
      }
    },
    "conditions": {
      "type": "array",
      "description": "All conditions must be true for effects to run. Uses string-based expression parsing.",
      "items": {
        "type": "string",
        "examples": ["PlayerStat.Reputation > 50", "WorldState.IsRaining == true"]
      }
    },
    "effects": {
      "type": "array",
      "description": "Ordered list of actions to execute if conditions pass.",
      "items": {
        "type": "string",
        "examples": ["StartDialogue(intro_node)", "AddIce(5)", "ModifyReputation(faction_a, -10)"]
      }
    }
  }
}
